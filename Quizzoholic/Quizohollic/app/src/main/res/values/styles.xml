<resources>

    <!-- Base application theme. -->
    <style name="QuizzoholicLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BondiBlue</item>
        <item name="colorPrimaryDark">@color/Marina</item>
        <item name="colorAccent">@color/Glass</item>
    </style>

    <style name="QuizzoholicLightTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/Black</item>
        <item name="android:background">@drawable/button_answer_options</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:shadowDx">10</item>
    </style>

    <style name="QuizzoholicLightTheme.MenuButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/button_menu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24dp</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:shadowDx">10</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="QuizzoholicDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Ink</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/Ember</item>
    </style>


    <style name="QuizzoholicDarkTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/Ink</item>
    </style>

